<h2><%= @user.name%>'s Profile</h2>

<p>
	Birthday: <%= @user.birthday%>
</p>

<div class="row">
	<% @user.blog_posts.each do |blog_post| %>
		<div class="col s12 m6">
	          <div class="card grey darken-1">
	            <div class="card-content white-text">
		            <span class="card-title"><%= link_to blog_post.title, blog_post%>
					</span>
					<p>Posted at:<%=blog_post.created_at.strftime('%m/%d/%Y at %l:%M%p')%></p>
					<p class="blog-entry"><%=blog_post.blog_entry[0..150]%>...[<%=link_to "READ MORE", blog_post%>]</p>
				</div>
			</div>
		</div>
	<%end%>
</div>