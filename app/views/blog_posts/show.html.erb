<p id="notice"><%= notice %></p>

<div class="card blue-grey darken-1">
  <div class="card-content white-text">
    <span class="card-title white-text">
      <%= @blog_post.title %>
    </span>by: <%=@blog_post.user.name%><span class="posted_at"> posted on: <%= @blog_post.created_at.strftime("%b %d %Y %I:%M%p") %>
    <p>
      <%= @blog_post.blog_entry %>
    </p>
  </div>
  <div class="card-action">
    <% if @blog_post.user == current_user %>
      <%= link_to 'Edit', edit_blog_post_path(@blog_post) %>
    <%end%>
  </div>
</div>
  
<div class="card">
  <div class="card-content black-text">
    <span class="card-title black-text">
      Leave a Comment!
    </span>
    <p>
      <%= render 'comments/form'%>
    </p>
  </div>
</div>
<div>
  <div class="card-title white-text">
  Comments
  </div>  
</div>
  
<div class="card orange darken-3">
  <% @blog_post.comments.each do |comment| %>
    <div class="card-content yellow-text"> 
      <%= comment.user.name %>:
        <p class="white-text">"<%= comment.comment_entry %>"</p>
          Posted on: <%= @blog_post.created_at.strftime("%b %d %Y %I:%M%p") %>
        <hr>
    </div>
  <%end%>
</div>

